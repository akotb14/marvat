        <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>
        </div>
        <div class="container1">
          <div class="admin-Category-form-container">
            <form method="post">
              <h3
                style="
                  text-transform: uppercase;
                  color: var(--black);
                  margin-bottom: 2rem;
                  text-align: center;
                  font-size: 1.7rem;
                "
              >
                add questons of homework or Edit homework
              </h3>

              <select name="educetionlevel">
                <option
                  name="educetionlevel"
                  value="<%=data.educetionlevel%>"
                  class="placeholder"
                  
                  selected
                  hidden
                >
                  <%=data.educetionlevel%>
                </option>
                <option name="educetionlevel" value="Secondary">
                  Secondary
                </option>
                <option name="educetionlevel" value="Preparatory">
                  Preparatory
                </option>
              </select>
              <br />
              <br />
              <br />
              <select name="grade">
                <option
                  name="grade"
                  value="<%=data.grade%>"
                  class="placeholder"
                  selected
                  hidden
                >
                  <%=data.grade %>
                </option>
                <option name="grade" value="1st">1st</option>
                <option name="grade" value="2nd">2nd</option>
                <option name="grade" value="3rd">3rd</option>
              </select>
              <br />
              <br />
              <br />
              
              <input
                name="nameQuiz"
                value="<%=data.nameQuiz%>"
                placeholder="enter name of quiz"
              />
              <br />
              <br />
              <br />
              <select name="no">
                <option
                  name="no"
                  value=""
                  class="placeholder"
                  disabled
                  selected
                  hidden
                >
                  question
                </option>
                <option name="no" value="1">1</option>
                <option name="no" value="2">2</option>
                <option name="no" value="3">3</option>
                <option name="no" value="4">4</option>
                <option name="no" value="5">5</option>
                <option name="no" value="6">6</option>
                <option name="no" value="7">7</option>
                <option name="no" value="8">8</option>
                <option name="no" value="9">9</option>
                <option name="no" value="10">10</option>
                <option name="no" value="11">11</option>
                <option name="no" value="12">12</option>
                <option name="no" value="13">13</option>
                <option name="no" value="14">14</option>
                <option name="no" value="15">15</option>
                <option name="no" value="16">16</option>
                <option name="no" value="17">17</option>
                <option name="no" value="18">18</option>
                <option name="no" value="19">19</option>
                <option name="no" value="20">20</option>
                <option name="no" value="21">21</option>
                <option name="no" value="22">22</option>
                <option name="no" value="23">23</option>
                <option name="no" value="24">24</option>
                <option name="no" value="25">25</option>
                <option name="no" value="26">26</option>
                <option name="no" value="27">27</option>
                <option name="no" value="28">28</option>
                <option name="no" value="29">29</option>
                <option name="no" value="30">30</option>
              </select>
              <br />
              <br />
              <br />
              <input
                type="text"
                placeholder="enter question"
                name="question"
                class="box"
              />

              <input
                type="text"
                placeholder="enter answer"
                name="answer"
                class="box"
              />
              <input
                type="text"
                placeholder="enter answer"
                name="answer"
                class="box"
              />
              <input
                type="text"
                placeholder="enter answer"
                name="answer"
                class="box"
              />
              <input
                type="text"
                placeholder="enter answer"
                name="answer"
                class="box"
              />
              <input
                type="text"
                placeholder="coorect answer"
                name="correctAnswer"
                class="box"
              />
              startTime: 
              <input
              type="datetime-local"
              name="startTime"
              value=<%=data.startTime%>
              class="box"
            />
            endTime:
            <input
              type="datetime-local"
              name="endTime"
              value=<%=data.endTime%>
              class="box"
            /><input
              type="text"
              name="quizTime"
              class="box"
              value="<%=data.quizTime%>" 
            />
              <input type="submit" class="btn" value="add Questions" />
            </form>
          </div>

          <div class="Category-display">
            <table class="Category-display-table">
              <thead>
                <tr>
                  <th>name quiz</th>
                  <th>number</th>
                  <th>question</th>
                  <th>answer</th>
                  <th>answer</th>
                  <th>answer</th>
                  <th>answer</th>
                  <th>correct answer</th>
                  <th>delete</th>
                </tr>
              </thead>
              <%for(i of question){ %>
              <tr>
                <td><%=data.nameQuiz %></td>
                <td><%=i.no %></td>
                <td><%=i.question %></td>
                <td><%=i.answer[0][0] %></td>
                <td><%=i.answer[0][1] %></td>
                <td><%=i.answer[0][2] %></td>
                <td><%=i.answer[0][3] %></td>

                <td><%=i.correctAnswer %></td>
                <td>
                  <a
                    style="
                      background-color: brown;
                      border-radius: 0.5rem;
                      padding: 0.5rem 0.5rem;
                      color: var(--white);
                    "
                    href="/removeQuestionOfExam/<%=data._id %>/<%=i._id %>"
                    >delete</a
                  >
                </td>
              </tr>
              <% } %>
            </table>
          </div>
